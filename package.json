{
  "name": "term-project-teammeow",
  "version": "1.0.0",
  "description": "npm packages that frontend and backend share",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node ./backend/server.js",
    "build": "webpack",
    "build:dev": "webpack --watch",
    "start:dev": "concurrently \"npm:server:dev\" \"npm:build:dev\"",
    "server:dev": "NODE_ENV=development nodemon -e js,ejs --watch backend ./backend/server.js",
    "prepare": "husky install",
    "db:create": "node-pg-migrate create -- ",
    "db:migrate": "node-pg-migrate up",
    "db:rollback": "node-pg-migrate down",
    "postinstall": "npm run db:migrate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/csc-667-spring-2023-roberts/term-project-teammeow.git"
  },
  "author": "teammeow",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/csc-667-spring-2023-roberts/term-project-teammeow/issues"
  },
  "homepage": "https://github.com/csc-667-spring-2023-roberts/term-project-teammeow#readme",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "connect-pg-simple": "^8.0.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "http-errors": "^2.0.0",
    "morgan": "^1.10.0",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.10.0",
    "pg-promise": "^11.4.3",
    "pug": "^3.0.2",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1"
  },
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "babel-loader": "^9.1.2",
    "concurrently": "^7.6.0",
    "connect-livereload": "^0.6.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "livereload": "^0.9.3",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "frontend/**/*.js": "webpack"
  }
}
